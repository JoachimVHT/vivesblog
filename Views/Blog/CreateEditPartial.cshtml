@model VivesBlog.Models.ViewModels.ArticlePerson

@{
    var authorId = Model.Article?.AuthorId;
    var authors = new SelectList(Model.Authors, "Id", "FirstName", authorId);
}


<div class="form-group">
    <label asp-for="Article.Title">Titel</label>
    <input asp-for="Article.Title" class="form-control" />
</div>
<div class="form-group">
    <label asp-for="Article.Description">Omschrijving</label>
    <textarea asp-for="Article.Description" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="Article.Content">Inhoud</label>
    <textarea asp-for="Article.Content" class="form-control"></textarea>
</div>

<div class="form-group">
    <label asp-for="Article.AuthorId">Auteur</label>
    <select asp-for="Article.AuthorId" asp-items="@authors" class="form-control"></select>
</div>