@model IList<VivesBlog.Models.Article>

@{
    ViewData["Title"] = "Manage Blogs";
}
<h1>Manage Blogs</h1>
<a class="btn btn-light" asp-action="Create">Nieuw</a>
<table class="table table-dark">
    <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Author</td>
            <td>Created</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <partial name="BlogPartial" model="article" />
        }
    </tbody>
</table>