@model VivesBlog.Models.Person

<tr>
    <td>@Model.Id</td>
    <td>@Model.FirstName</td>
    <td>@Model.LastName</td>
    <td>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Bewerken</a>
        <a class="btn btn-info" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn btn-info"
           data-toggle="modal"
           data-target="#personDeleteModal"
           data-id="@Model.Id"
           data-mode="Delete">Delete Modal</a>
    </td>
</tr>